<%- include('./head/head.ejs') -%> 
<%- include('./sidebar/sidebar.ejs') -%>
<main id="main-body" class="d-flex justify-content-center">
    <h1 class="w-100 text-center mb-4 mt-2">Cadastro de produtos</h1>
    <form method= "POST" action="AddProd" name="AddProd" id="form-product" class="w-100">
        <div class="form-group">
            <input type="hidden" name="pro_id" id="pro_id" value="<%= typeof(pro_id) === 'undefined' ? '' : pro_id %>">
            <label for="product-name">Nome do produto</label>
            <input type="text" class="form-control" id="product-name" aria-describedby="product-name-help" placeholder="Ex: Caneta BIC" name="name" id="product-name" minlength="3" maxlength="200" required>
            <small id="product-name-message" class="form-text text-muted"></small>
            <small id="product-name-help" class="form-text text-muted">Nome do produto que você está criando</small>
        </div>
        <div class="form-group">
            <label for="product-price">Preço do produto</label>
            <input type="text" class="form-control" id="product-price" aria-describedby="product-price-help" placeholder="Ex: 2.50" name="price" id="product-price" min="1" maxlength="8" required>
            <small id="product-price-help" class="form-text text-muted">Preço do produto que você está criando</small>
        </div>
        <div class="form-group">
            <label for="product-quantity">Quantidade de produtos</label>
            <input type="text" class="form-control" id="product-quantity" aria-describedby="product-quantity-help" placeholder="Ex: 100" name="quantity" minlength="1" maxlength="5" required>
            <small id="product-quantity-help" class="form-text text-muted">Quantidade de produtos cadastrados, comprados</small>
        </div>
        <!-- <div class="form-group">
            <label for="product-solds">Quantidade de produtos vendidos</label>
            <input type="number" class="form-control" id="product-solds" aria-describedby="product-solds-help" placeholder="Ex: 10" name="solds">
            <small id="product-solds-help" class="form-text text-muted">Quantidade de produtos vendidos</small>
        </div> -->
        <div class="form-group w-100 text-center">
            <button type="submit" class="btn submit-button">Cadastrar</button>
        </div>
    </form>
</main>
<script src="//cdnjs.cloudflare.com/ajax/libs/validate.js/0.13.1/validate.min.js"></script>
<%- include('./footer/footer.ejs') -%>