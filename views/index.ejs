<%- include('./head/head.ejs') -%> 
<%- include('./sidebar/sidebar.ejs') -%>
<main id="main-body">
    <h1 class="w-100 text-center mb-4 mt-2">Estoque de produtos</h1>
    <div class="table-responsive w-100">
        <table id="datatable" class="table table-hover" style="width: 100%; border-spacing: 0; font-size: 1rem; font-weight: 400; line-height: 1.5; background-color: transparent; margin-bottom: 1rem;">
            <thead>
                <tr id="datatable-thead">
                    <th value="0" order="asc" scope="col" title="Nome do produto">Nome <img src="/img/down-arrow.png" alt=""></th>
                    <th value="1" order="asc" scope="col" title="Preço do produto">Preço <img src="/img/down-arrow.png" alt=""></th>
                    <th value="2" order="asc" scope="col" title="Quantidade de produtos comprados">Quantidade <img src="/img/down-arrow.png" alt=""></th>
                    <th value="3" order="asc" scope="col" title="Quantidade de produtos vendidos">Vendas <img src="/img/down-arrow.png" alt=""></th>
                    <th scope="col" title="Ações como editar e excluir produto">Ações</th>
                </tr>
            </thead>
            <tbody id="datatable-tbody">
                <% for(let product of data) { %> 
                    <tr>
                        <td scope="row" style="border-bottom: 1px solid #dee2e6; padding: .75rem; text-align:left"><%= product.pro_name %></td>
                        <td style="border-bottom: 1px solid #dee2e6; padding: .75rem; text-align:left"><%= product.pro_price %></td>
                        <td style="border-bottom: 1px solid #dee2e6; padding: .75rem; text-align:left"><%= product.pro_quantity %></td>
                        <td style="border-bottom: 1px solid #dee2e6; padding: .75rem; text-align:left"><%= product.pro_solds %></td>
                        <td style="border-bottom: 1px solid #dee2e6; padding: .75rem; text-align:left;">
                            <a href="/update/<%= product.pro_id %>">
                                <!-- <img src="img/edit.png" class="actions-icons" alt="Editar" title="Editar" style="margin-right: 5px; height: auto; max-width: 32px; width: 100%; margin-bottom: 3px;"> -->
                                <i class="fas fa-edit fa-2x"></i>
                            </a>
                            <a href="/delete/<%= product.pro_id %>">
                                <!-- <img src="img/delete.png" class="actions-icons" alt="Deletar" title="Deletar" style="margin-right: 5px; height: auto; max-width: 32px; width: 100%; margin-bottom: 3px;"> -->
                                <i class="fas fa-trash-alt fa-2x"></i>
                            </a>
                        </td>
                    </tr>
                <% } %> 
            </tbody>
        </table>
    </div>
    <div id="download-button-div">
        Baixar o arquivo em PDF
        <a href="/relatorio" target="_blank">
            <button id="table-download-button" class="btn btn-success">
                <i class="fas fa-download"></i>
                Download
            </button>
        </a>
    </div>
    <div class="credits w-100 text-center">
        Icons made by <a href="https://www.flaticon.com/free-icon/download_1159628" title="Kiranshastry">Kiranshastry</a> from <a href="https://www.flaticon.com/" title="Flaticon"> 
        www.flaticon.com</a>
    </div>
</main>
<%- include('./footer/footer.ejs') -%>