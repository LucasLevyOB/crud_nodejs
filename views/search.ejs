<%- include('./head/head.ejs') -%> 
<%- include('./sidebar/sidebar.ejs') -%>
<main id="main-body">
<div aria-live="polite" aria-atomic="true" style="position: relative; min-height: 200px;">
     <h1 class="w-100 text-center mb-4 mt-2">Pesquisar por produtos.</h1>
     <div class="w-100 d-flex justify-content-center mb-2">
         <form class="form-inline my-2 my-lg-0" action="">
            <input class="form-control mr-sm-2" type="search" placeholder="Pesquisar..." aria-label="Search" id="search-input">
            <button type="submit" class="btn btn-outline-secondary my-2 my-sm-0" id="search-button">
                <i class="fas fa-search fa-1x"></i>
            </button>
          </form>
     </div>
    <div id="datatable-div" class="table-responsive w-100 mb-2">
        <table id="datatable" class="table table-hover table-bordered d-none">
            <thead>
                <tr id="datatable-thead">
                    <th value="0" order="asc" scope="col" title="Nome do produto">
                        Nome 
                        <i class="fas fa-sort-down"></i>
                    </th>
                    <th value="1" order="asc" scope="col" title="Preço do produto">
                        Preço(R$) 
                        <i class="fas fa-sort-down"></i>
                    </th>
                    <th value="2" order="asc" scope="col" title="Quantidade de produtos comprados">
                        Quantidade 
                        <i class="fas fa-sort-down"></i>
                    </th>
                    <th value="3" order="asc" scope="col" title="Quantidade de produtos vendidos">
                        Vendas 
                        <i class="fas fa-sort-down"></i>
                    </th>
                    <th scope="col" title="Ações como editar e excluir produto">Ações</th>
                </tr>
            </thead>
            <tbody id="datatable-tbody">
                 
            </tbody>
        </table>
    </div>
    <div id="message-search" class="w-100 text-center"></div>
    <div style="position: absolute; top: 0; right: 0;">
        <%- include('./toasts/toasts.ejs') -%>
    </div>
</div>
<%- include('./modals/modalProducts.ejs') -%>
</main>
<%- include('./footer/footer.ejs') -%>